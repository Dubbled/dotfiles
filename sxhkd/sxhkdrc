#!/bin/bash
super + alt + Escape
	bspc quit

super + {_,shift} + c
	bspc desktop -C {backward, forward}

super + {t, s, f}
	bspc node -t {tiled, floating, fullscreen}

super + p
	bspc node -g sticky

alt + space
	theme

super + {_,shift} + r
	bspc node @/ -R {90,270}

super + q
	bspc node -c	

super + m
	bspc node -s biggest

super + {_,shift} + Tab
	bspc node -f {prev, next}

super + Return
	urxvt
super + {h, j, k, l}
	bspc node -f {west, south, north, east}

~button1
	bspc pointer -g focus && pkill dmenu

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

super + space
	menu

super + {b,e}
	bspc node @/ -{B,E}

super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {1-9}
	bspc node -o 0.{1-9}

ctrl + super + space
	bspc node -p cancel

super + alt + {h, j, k, l}
	bspc node {@west -r -25,@south -r +25,@north -r -25,@east -r +25}

super + shift + alt + {h, j, k, l}
	bspc node {@east -r -25,@north -r +25,@south -r -25,@west -r +25}

super + r
	bspc node -R 90

super + {w, e}
	bspc window -r {west 90, south 90}

alt + {minus, equal}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap ` {+, -} 10 ))

super + {1-7}
	bspc desktop -f {I, II, III, IV, V, VI, VII}

super + shift + {1-7}
	bspc node -d {I, II, III, IV, V, VI, VII}

super + Escape
	pkill -USR1 -x sxhkd && xrdb -load ~/.Xresources

XF86Audio{Prev,Next}
     mpc -q {prev,next}


XF86AudioPlay
     mpc -q toggle

XF86Audio{LowerVolume,RaiseVolume}
    amixer -q sset Master 3%{-,+}

XF86AudioMute
    amixer -q set Master toggle


#!/bin/sh
super + alt + Escape
	pkill xwait

super + {t, f, p}
	bspc window -t {floating, fullscreen, sticky}

super + q
	killw $(pfw)	

super + {h, j, k, l}
	wmv {-20 0, 0 20, 0 -20, 20 0} $(pfw)

super + alt + {h, j, k, l}
	wrs {-20 0, 0 20, 0 -20, 20 0} $(pfw)

super + c
	cornerw md $(pfw)

super + m
	bspc window -s biggest

super + {_,shift} + Tab
	bspc window -f {prev, next}

super + Return
	urxvt

super + space
	menu

~button1
	bspc pointer -g focus

super + !button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + @button{1-3}
	bspc pointer -u

super + {1-5}
	bspc desktop -f {I, II, III, IV, V}

super + shift + {1-5}
	bspc window -d {I, II, III, IV, V}

alt + {minus, equal}
	bspc config -d focuwed window_gap $((`bspc config -d focused window_gap ` {+, -} 2 ))

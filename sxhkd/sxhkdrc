#!/bin/sh
# Exit BSPWM
super + alt + Escape
	bspc quit

# Close window
super + q
	bspc window -c

# Kill window
super + shift + q
	bspc window -k

# Change desktop
super + {1-5}
	bspc desktop -f {1-5}

# Send focused window to desktop
super + shift + {1-5}
	bspc window -d {1-5}

# Swap current window with largest
super + m
	bspc window -s biggest

# Fullscreen window
super + f
	bspc window -t fullscreen

super + p
	bspc window -t pseudo_tiled

# Floating window
super + t
	bspc window -t floating

# Focus next window
super + Tab
	bspc window -f next

# Focus previous window
super + shift + Tab
	bspc window -f prev

# Focus directionally
super + {h, j, k, l}
	bspc window -f {left, down, up, right}

# Balance windows
super + b
	bspc desktop -B

# Reset split ratio
super + e
	bspc desktop -E

# Circulate leaves of tree
super + c
	bspc desktop -f forward

super + shift + c
	bspc desktop -f backward

# Switch from tiled to floating / vice versa
super + t
	bspc desktop -l tiled

super + r
	bspc desktop -R 90

super + g
	bspc desktop -l next

~button1
	bspc pointer -g focus

super + button1
	bspc pointer -g focus; xmmv

super + @button1
	pkill xmmv

@button1
	pkill xmmv

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# Open terminal
super + Return
	urxvt

super + space
	menu


#!/bin/bash

. $HOME/.bin/colr
SEP="    "
SEP2="  "
Clock() {
	echo "%{A:pkill xinit:}%{+u}%{U#$fg}$SEP$(date +%c)$SEP%{U-}%{-u}%{A}"
}

WS() {
	currentDesktop=$(xdotool get_desktop)
	switcher=""
	for desktop in $(echo "0 1 2 3 4" | tr " " "\n"); do
		if [[ $desktop = $currentDesktop ]]; then
			switcher="$switcher%{F#$fg}%{+u}%{U#$fg}$SEP2  $SEP2%{U-}%{-u}%{F-}"
		else
			switcher="$switcher%{A:xdotool set_desktop $desktop:}$SEP2  $SEP2%{A}"
		fi
	done
	echo "$switcher"
}

Todo() {
	echo "%{A:todo:}%{F#$fg} %{F-}$(cat .todo | wc -l)%{A}"
}

Track() {
	if [[ $(mpc | grep playing) != "" ]]; then
		prefix="%{A2:mpc next:}%{A3:plst:}%{+u}%{U#$fg}%{A:mpc pause:}  "
	else
		prefix="%{A2:mpc next:}%{A3:plst:}%{A:mpc play:}  "
	fi
		
	echo "$prefix$SEP2$(mpc | grep -)%{A}%{A}%{A}%{-u}%{U-}"
}

Node() {
	status=1
	ping -c 1 104.131.33.121 || status=0
	if [[ status = 1 ]]; then
		color="#$grn"
	else
		color="#$red"
	fi
	echo "%{F$color}  %{F-}"
}

IPFS() {
	peers=$(ipfs swarm peers | wc -l)
	echo "%{F#$fg}  %{F-}$peers"
}

Weather() {
	echo $(weather-report 47906 | grep Temperature:)
}

Packages() {
	packages=$(pacman -Q | wc -l)
	echo "%{F#$fg} %{F-}$packages"
}

Name() {
	echo "$SEP$(whoami)@$(hostname)$SEP"
}

echo "%{B#$bg}%{F#$fg}$SEP$(WS)${B#$bg}%{c}%{B-}$(Track)%{r}$(Todo)$SEP$(IPFS)$SEP$(Packages)$SEP$(Clock)%{F-}%{B-}"

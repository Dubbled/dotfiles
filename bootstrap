rm ~/.Xresources
mkdir ~/.config
mkdir ~/.bin
mkdir ~/.config/bspwm
mkdir ~/.config/cava
mkdir ~/.colors
mkdir ~/.config/compton
mkdir ~/.config/ncmpcpp
mkdir ~/.config/nvim
mkdir ~/.config/openbox
mkdir ~/.config/qutebrowser
mkdir ~/.config/ranger
mkdir ~/.config/sublime-text-3

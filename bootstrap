stow bspwm -t ~/.config/bspwm
stow cava -t ~/.config/cava
stow colors -t ~/.colors
stow compton -t ~/.config/compton
stow ncmpcpp -t ~/.config/ncmpcpp
stow nvim -t ~/.config/nvim
stow openbox -t ~/.config/openbox
stow qutebrowser -t ~/.config/qutebrowser
stow ranger -t ~/.config/ranger
stow scripts -t ~/.bin
stow sublime-text-3 -t ~/.config/sublime-text-3
stow sxhkd -t ~/.config/sxhkd
stow x -t ~

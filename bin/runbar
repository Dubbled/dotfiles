#!/bin/sh
. $HOME/.bin/colr
[ -e "/tmp/barfifo" ] && rm "/tmp/barfifo"
mkfifo "/tmp/barfifo"
bspc subscribe > /tmp/barfifo &
#xtitle -sf 'T%s' > /tmp/barfifo &
#date '+S%a %H:%M' > /tmp/barfifo &
if [[ $(hostname) = "globbox" ]]; then
	settings="-o -1 -f lemon:size=8 -g 1020x25+450+20 -o 1 -f FontAwesome:size=10"
else
	settings="-f RobotoMono:size=11 -f FontAwesome:size=12 -b -g 2880x50+0+0 "
fi
bar < /tmp/barfifo | lemonbar ${settings} -F"#$fg" -B"#$bg" -p -u 3 | sh

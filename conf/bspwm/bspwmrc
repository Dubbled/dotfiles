#!/bin/bash

. $HOME/.bin/colr
pkill bar
bspc config pointer_motion_interval 1
bspc config click_to_focus true
bspc config border_width 2
bspc config window_gap 10
bspc config top_padding 30
bspc config left_padding 0
bspc config right_padding 0
bspc config bottom_padding 0
bspc config split_ratio         0.5
bspc config focused_border_color "#$red"
bspc config active_border_color "#$bblk"
bspc config normal_border_color "#$bblk"
bspc config presel_feedback_color "#$red"
bspc config ignore_ewmh_focus true
bspc monitor DVI-I-1 -d 0 1 2 3 4
bspc monitor DVI-D-0 -d 0 1 2 3 4 
bspc monitor DP-0 -d 0 1 2 3 4
bspc monitor HDMI-0 -d 0 1 2 3 4
bspc rule -a bar state=locked follow=on
xrdb ~/.Xresources
pkill sxhkd
sxhkd -c ~/.config/sxhkd/sxhkdrc &
hsetroot -tile "$HOME/.wp/escheresque_ste.png"

polybar uw &
polybar left &
polybar middle &
polybar right &

if [ -e "$BSPWM_STATE" ] ; then
	bspc wm -l "$BSPWM_STATE"
	rm "$BSPWM_STATE"
fi

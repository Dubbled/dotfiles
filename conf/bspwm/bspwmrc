#!/bin/bash

. $HOME/.bin/colr

bspc config border_width 3
bspc config window_gap 30
bspc config top_padding	30
bspc config left_padding 61
bspc config right_padding 61
bspc config bottom_padding 10
bspc config split_ratio         0.5
bspc config borderless_monocle  true
bspc config gapless_monocle     true
bspc config focus_by_distance   true
bspc config focused_border_color "#$red"
bspc config active_border_color "#$bblk"
bspc config normal_border_color "#$bblk"
bspc config normal_locked_border_color "#$fg"
bspc config focused_sticky_border_color "#$red"
bspc config active_sticky_border_color "#$cyn"
bspc config normal_sticky_border_color "#$red"
bspc config focused_private_border_color '#cc99cc'
bspc config active_private_border_color '#cc99cc'
bspc config normal_private_border_color '#cc99cc'
bspc config urgent_border_color '#f2777a'
bspc config presel_feedback_color "#$bblk"
bspc config focus_by_distance false
bspc config focus_follows_mouse true
bspc monitor DVI-I-1 -d I II III IV V VI VII IX
bspc rule -a bar state=locked follow=on
bspc rule -a chromium desktop='^2'
bspc rule -a Subl3 desktop='^3'
bspc rule -a Steam desktop='^4' state=floating
bspc rule -a Gimp desktop='^8' state=floating
bspc rule -a Deluge desktop='^9'
xrdb ~/.Xresources
hsetroot -tile "/home/ace/Pictures/escheresque_ste.png"
pkill bar
runbar &
deluge &
chromium &
if [ -e "$BSPWM_STATE" ] ; then
	bspc wm -l "$BSPWM_STATE"
	rm "$BSPWM_STATE"
fi
bspc desktop -f I
